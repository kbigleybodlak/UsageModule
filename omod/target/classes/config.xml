<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>UsageModule</id>
	<name>UsageModule</name>
	<version>1.0-SNAPSHOT</version>
	<package>org.openmrs.module.UsageModule</package>
	<author>${module-author}</author>
	<description>
		Usages
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/UsageModule/update.rdf</updateURL>
	<require_version>1.9.7</require_version>
	<!-- / Module Properties -->

	<require_modules>
        <require_module>
            org.openmrs.module.uiframework
        </require_module>
        
        																											
        <require_module version="1.3">
            org.openmrs.module.uicommons
        </require_module>
																											
        <require_module version="1.0">
            org.openmrs.module.appui
        </require_module>
																											
        <require_module version="2.1">
            org.openmrs.module.appframework
        </require_module>
			
    </require_modules>

	
	<!-- Module Activator -->
	<activator>org.openmrs.module.UsageModule.UsageModuleActivator</activator>
	
	
	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.UsageModule.extension.html.AdminList</class>
	</extension>
        
        <advice>
            <point>org.openmrs.api.PatientService</point>
            <class>org.openmrs.module.UsageModule.advice.PatientServiceAdvice</class>
        </advice>
        <advice>
            <point>org.openmrs.api.OrderService</point>
            <class>org.openmrs.module.UsageModule.advice.OrderServiceAdvice</class>
        </advice>
        <advice>
            <point>org.openmrs.api.VisitService</point>
            <class>org.openmrs.module.UsageModule.advice.VisitServiceAdvice</class>
        </advice>
        
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>

        UsageModule.hbm.xml
				
	</mappingFiles>

	<!-- Internationalization -->
	<!-- All message codes should start with UsageModule. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

</module>

